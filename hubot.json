{
  "builders": [
    {
        "type": "docker",
        "image": "ubuntu:14.04.2",
        "commit": true,
        "pull": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "hubot",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "common/setup-base-system.sh",
        "hubot/install-hubot.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "common/cleanup.sh"
      ]
    }
  ],

  "post-processors": [
    {
    "type": "docker-tag",
    "only": ["docker"],
    "repository": "hubot",
    "tag": "latest"
    }
  ]

}
