{
  "builders": [
    {
        "type": "docker",
        "image": "miurahr/rbenv:2.0.0-p643",
        "commit": true,
        "pull": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "kandan",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "common/setup-base-system.sh",
        "kandan/install-kandan.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "common/cleanup.sh"
      ]
    }
  ],

  "post-processors": [
    {
    "type": "docker-tag",
    "only": ["docker"],
    "repository": "kandan",
    "tag": "latest"
    }
  ]

}
